<%= simple_form_for(@article) do |f| %>
  <%= f.input :title, placeholder: "Enter the title." %>
  <%= f.input :subtitle, placeholder: "Enter the subtitle."%>
  <%= f.input :summary, placeholder: "Enter the summary." %>
  <%= f.input :content, placeholder: "Enter the content." %>
  <%= f.input :picture, placeholder: "test" %>
  <%= f.input :category, placeholder: "Enter the category." %>
  <%= f.button :submit, class: "btn btn-primary"  %>
<% end %>

